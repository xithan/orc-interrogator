<div class="card mb-5">
    <div class="card-header">
        <h3 class="text-dark">@Title</h3>
    </div>
    <div class="card-body">
        @ChildContent
    </div>
</div>

@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}